<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">
	<targets>
		<target name="NTECHINFO" xsi:type="File"
				layout="&lt;${date:format=yyyyMMdd HH\:mm\:ss\:fff}&gt; [ INFO ] ${message} ${exception:format=tostring}"
				fileName="${date:yyyyMMdd}.LOG"
				keepFileOpen="false"
				archiveNumbering="Sequence"
				archiveAboveSize="5242880"
				archiveFileName="${date:yyyyMMdd}_{#}.LOG"
				encoding="utf-8" />

		<target name="NTECHERROR" xsi:type="File"
				layout="&lt;${date:format=yyyyMMdd HH\:mm\:ss\:fff}&gt; [ ERROR ] ${message} ${exception:format=tostring}"
				fileName="${date:yyyyMMdd}.LOG"
				keepFileOpen="false"
				archiveNumbering="Sequence"
				archiveAboveSize="5242880"
				archiveFileName="${date:yyyyMMdd}_{#}.LOG"
				encoding="utf-8" />

		<target name="NTECHWARNING" xsi:type="File"
				layout="&lt;${date:format=yyyyMMdd HH\:mm\:ss\:fff}&gt; [ GUICONNECTOR ] ${message} ${exception:format=tostring}"
				fileName="${date:yyyyMMdd}.LOG"
				keepFileOpen="false"
				archiveNumbering="Sequence"
				archiveAboveSize="5242880"
				archiveFileName="${date:yyyyMMdd}_{#}.LOG"
				encoding="utf-8" />

		<target name="NTECHDBCONNECTOR" xsi:type="File"
				layout="&lt;${date:format=yyyyMMdd HH\:mm\:ss\:fff}&gt; [ DBCONNECTOR ] ${message} ${exception:format=tostring}"
				fileName="${date:yyyyMMdd}.LOG"
				keepFileOpen="false"
				archiveNumbering="Sequence"
				archiveAboveSize="5242880"
				archiveFileName="${date:yyyyMMdd}_{#}.LOG"
				encoding="utf-8" />

		<target name="NTECHDEBUG" xsi:type="File"
				layout="&lt;${date:format=yyyyMMdd HH\:mm\:ss\:fff}&gt; [ DEBUG ] ${message} ${exception:format=tostring}"
				fileName="${date:yyyyMMdd}.LOG"
				keepFileOpen="false"
				archiveNumbering="Sequence"
				archiveAboveSize="5242880"
				archiveFileName="${date:yyyyMMdd}_{#}.LOG"
				encoding="utf-8" />

		<target name="console" xsi:type="Console" layout="[ ${level:uppercase=true} ] ${message}${exception:format=tostring}" />
	</targets>

	<rules>
		<!--<logger name="CCILogger" minlevel="Debug" writeTo="CCIGUI,console" />-->
		<logger name="NTechInfo" minlevel="Debug" writeTo="NTechInfo,console" />
		<logger name="NTechError" minlevel="Debug" writeTo="NTechError,console" />
		<logger name="NTechWarning" minlevel="Debug" writeTo="NTechWarning,console" />
		<logger name="NTechDBConnector" minlevel="Debug" writeTo="NTechDBConnector,console" />
		<logger name="NTechDebug" minlevel="Debug" writeTo="NTechDebug,console" />
	</rules>
</nlog>